{
  "name": "@mschoenbo/nx-build-tools",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "build-tools/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/build-tools",
        "main": "build-tools/src/index.ts",
        "tsConfig": "build-tools/tsconfig.lib.json",
        "assets": [
          "build-tools/*.md",
          "build-tools/LICENSE",
          {
            "input": "./build-tools",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "./build-tools/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./build-tools/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./build-tools",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./build-tools",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "build-tools/jest.config.ts"
      }
    }
  }
}
